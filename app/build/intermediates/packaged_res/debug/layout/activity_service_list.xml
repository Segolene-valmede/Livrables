<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="25dp"
    app:cardBackgroundColor="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="100dp"
            android:text="Add Service"
            android:textAlignment="center"
            android:textColor="#673AB7"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_title"
            android:textSize="25sp"
            android:layout_marginTop="35dp"
            android:text="Service name" />

        <TextView
            android:id="@+id/text_view_formulaires"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_service_name"
            android:textSize="25sp"
            android:layout_marginTop="35dp"
            android:text="Formulaire (s)" />

        <TextView
            android:id="@+id/text_view_documents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_formulaires"
            android:textSize="25sp"
            android:layout_marginTop="35dp"
            android:text="document (s)" />




    </RelativeLayout>


</androidx.cardview.widget.CardView>